{
  "name": "playwright",
  "version": "1.0.0",
  "description": "Playwright test automation with MCP integration",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "npx playwright test",
    "test:login": "npx playwright test Tests/LoginTests/ --project=chromium",
    "test:dashboard": "npx playwright test Tests/DashboardTests/ --project=chromium",
    "test:connection": "npx playwright test Tests/AddStandaloneConnectionTests/ --project=chromium",
    "report": "npx allure generate allure-results --clean -o allure-report && npx allure open allure-report",
    "mcp:server": "node mcp/playwright-server.js",
    "mcp:client": "node mcp/mcp-client.js"
  },
  "keywords": ["playwright", "testing", "mcp", "automation"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.9",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.5",
    "dotenv": "^17.2.3",
    "playwright-qase-reporter": "^2.1.7"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "zod": "^4.3.5"
  }
}
